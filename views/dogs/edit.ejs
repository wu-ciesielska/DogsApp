<% include ../partials/header2.ejs %>

<div class="container">
    <div class="jumbotron formJumbotron jumbotronTransparent">   
        <h1>Edit <%= dog.name %></h1>
        <form action="/dogs/<%= dog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="dog[name]" value="<%= dog.name %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="dog[breed]" value="<%= dog.breed %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="dog[age]" value="<%= dog.age %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="dog[image]" value="<%= dog.image %>" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="5" name="description" required><%= dog.description %></textarea>
            </div>
            <button class="btn btn-dark"type="submit">Edit Dog</button>
        </form>
    </div>
</div>

<% include ../partials/footer.ejs %>